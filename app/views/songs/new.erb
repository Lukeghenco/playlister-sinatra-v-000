<h2>Add New Song</h2>

<form action="/songs/new" method="POST">
	<label for="artist">Name of Artist: </label>
	<input type="text" id="artist_name" name="artist_name">
	<br>
	<label for ="song">Name of Song: </label>
	<input type="text" id="song_name" name="song_name">
	<br>
	<label for ="genre">Genre: </label>
	<% Genre.all.uniq.each do |genre| %>
		<%= genre.name %><input id="<%= genre.name %>" type="checkbox" name="genre" value="<%= genre.name %>">
	<% end %>
	<input type="submit" value="submit">
</form>